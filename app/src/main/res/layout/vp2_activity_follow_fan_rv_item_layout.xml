<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/vp2_follow_fan_item_rv_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/vp2_follow_fan_item_rv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="段子乐"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/vp2_follow_fan_item_rv_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vp2_follow_fan_item_rv_content"
        android:ellipsize="end"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="在Fragment中执行一段耗时任务，在任务未结束的时候，重建Activity就会导致"
        app:layout_constraintStart_toEndOf="@+id/vp2_follow_fan_item_rv_img"
        app:layout_constraintTop_toBottomOf="@+id/vp2_follow_fan_item_rv_nick_name" />

    <Button
        android:id="@+id/vp2_follow_fan_item_rv_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_followed_button"
        android:text="已关注"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toEndOf="@+id/vp2_follow_fan_item_rv_content"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>