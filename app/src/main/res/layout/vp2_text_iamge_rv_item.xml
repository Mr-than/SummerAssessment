<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/vp2_text_img_rv_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/vp2_text_img_rv_item_like_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/vp2_text_img_rv_item_hate_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp2_text_img_rv_item_img_layout">

        <ImageView
            android:id="@+id/vp2_text_img_rv_item_like_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vp2_text_img_rv_item_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vp2_text_img_rv_item_like_img"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/vp2_text_img_rv_item_share_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vp2_text_img_rv_item_comment_layout"
        app:layout_constraintTop_toBottomOf="@+id/vp2_text_img_rv_item_img_layout">

        <ImageView
            android:id="@+id/vp2_text_img_rv_item_share_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vp2_text_img_rv_item_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vp2_text_img_rv_item_share_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:id="@+id/vp2_text_img_rv_item_comment_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/vp2_text_img_rv_item_share_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vp2_text_img_rv_item_hate_layout"
        app:layout_constraintTop_toBottomOf="@+id/vp2_text_img_rv_item_img_layout"
        android:focusable="true">

        <ImageView
            android:id="@+id/vp2_text_img_rv_item_comment_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/avatar_review"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vp2_text_img_rv_item_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vp2_text_img_rv_item_comment_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/vp2_text_img_rv_item_hate_layout"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/vp2_text_img_rv_item_comment_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vp2_text_img_rv_item_like_layout"
        app:layout_constraintTop_toBottomOf="@+id/vp2_text_img_rv_item_img_layout">

        <ImageView
            android:id="@+id/vp2_text_img_rv_item_hate_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/hate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vp2_text_img_rv_item_hate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vp2_text_img_rv_item_hate_img"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:paddingLeft="16dp"
        android:id="@+id/vp2_text_img_rv_item_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp2_text_img_rv_item_text">

        <ImageView
            android:id="@+id/vp2_text_img_rv_item_img"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>